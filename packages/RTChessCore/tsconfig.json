{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES6",
    "strict": true,
    "noUnusedLocals": false, // Re-enable this!
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
